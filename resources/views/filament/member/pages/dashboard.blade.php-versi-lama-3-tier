                                    @if($tier->css_class === 'gold')
                                        <x-heroicon-s-star /> {{-- Bintang untuk Gold --}}
                                    @else
                                        <x-heroicon-s-check-circle /> 
                                    @endif
                                    {{ $benefit }}
                                </li>
