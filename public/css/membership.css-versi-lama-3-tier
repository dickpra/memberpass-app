/* --- ANIMASI KILAUAN (SHIMMER) UNTUK GOLD --- */
.pricing-card.gold::before {
    content: '';
    position: absolute;
    top: 0;
    left: -150%;
    width: 100%;
    height: 100%;
    background: linear-gradient(
        to right, 
        rgba(255,255,255,0) 0%, 
        rgba(255,255,255,0.4) 50%, 
        rgba(255,255,255,0) 100%
    );
    transform: skewX(-25deg);
    animation: shine 4s infinite; /* Animasi berjalan selamanya */
    pointer-events: none; /* Agar tidak mengganggu klik */
    z-index: 50;
}

@keyframes shine {
    0% { left: -150%; }
    20% { left: 150%; } /* Kilau lewat cepat */
    100% { left: 150%; } /* Jeda lama sebelum kilau lagi */
}